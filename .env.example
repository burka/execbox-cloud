# Database Configuration
# For development with local PostgreSQL (uses port 5433 to avoid conflicts):
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/execbox

# For production with Supabase:
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
# SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
# SUPABASE_ANON_KEY=[YOUR-SUPABASE-ANON-KEY]

# Alternative database settings (optional, used if DATABASE_URL not set)
DB_HOST=localhost
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=execbox

# Backend Selection
# Options: "fly" (default), "kubernetes"
BACKEND=fly

# Fly.io Configuration (used when BACKEND=fly)
# API token for Fly.io authentication (get from: fly auth token)
FLY_API_TOKEN=your-fly-api-token-here

# Fly.io app name for machine deployments
FLY_APP_NAME=execbox-cloud

# Fly.io organization slug
FLY_ORG=personal

# Kubernetes Configuration (used when BACKEND=kubernetes)
# Path to kubeconfig file (empty uses in-cluster config or ~/.kube/config)
# K8S_KUBECONFIG=/path/to/kubeconfig

# Kubernetes namespace for execbox resources (default: execbox)
K8S_NAMESPACE=execbox

# ServiceAccount name for RBAC (default: execbox)
K8S_SERVICE_ACCOUNT=execbox

# Container image registry (default: ttl.sh)
# Options: ttl.sh (no auth), docker.io, gcr.io, ecr, or custom registry
K8S_REGISTRY=ttl.sh

# Image TTL for ttl.sh registry (default: 4h)
# Format: 1h, 4h, 24h, 7d, etc.
K8S_IMAGE_TTL=4h

# Server Configuration
# HTTP server port (default: 28080 for development to avoid conflicts)
PORT=28080

# Logging level: debug, info, warn, error (default: info)
LOG_LEVEL=debug

# Frontend Development (using high ports to avoid conflicts)
VITE_API_BASE_URL=http://localhost:28080
VITE_BACKEND_PORT=28080
VITE_FRONTEND_PORT=25173
